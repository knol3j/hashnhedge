# HashNHedge Image Agent Configuration
# Copy this file to .env and fill in your API keys

HASHNHEDGE_PROJECT_ROOT=C:\Users\gnul\hashnhedge

# API Keys (get free keys from each provider)
UNSPLASH_ACCESS_KEY=
PEXELS_API_KEY=
PIXABAY_API_KEY=

# Provider Settings
PROVIDER_PRIORITY=openverse,pixabay,pexels,unsplash
MAX_REQUESTS_PER_HOUR=30
MAX_DAILY_DOWNLOADS=50

# Image Settings
DEFAULT_IMAGE_WIDTH=1600
DEFAULT_THUMB_WIDTH=640
ALLOWED_LICENSES=unsplash,pexels,pixabay,cc0,cc-by,cc-by-sa

# Enable Openverse-only mode if no API keys are configured
OPENVERSE_ONLY_MODE=auto
