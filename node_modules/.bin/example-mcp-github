#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -x "$basedir/bunwrapper" ]; then
  exec "$basedir/bunwrapper"  "$basedir/../@aigne/example-mcp-github/index.ts" "$@"
else 
  exec bunwrapper  "$basedir/../@aigne/example-mcp-github/index.ts" "$@"
fi
