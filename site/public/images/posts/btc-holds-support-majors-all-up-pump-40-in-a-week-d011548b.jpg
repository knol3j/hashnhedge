<svg xmlns="http://www.w3.org/2000/svg" width="800" height="400" viewBox="0 0 800 400">
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1a202c;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#2d3748;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="bitcoin" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#f7931a;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#ff6b00;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="green" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#00ff80;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#00b359;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="support" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#4299e1;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#3182ce;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <rect width="800" height="400" fill="url(#bg)"/>
  
  <!-- Bitcoin Symbol -->
  <circle cx="150" cy="150" r="50" fill="url(#bitcoin)" opacity="0.9"/>
  <text x="150" y="163" text-anchor="middle" font-family="Arial, sans-serif" font-size="32" font-weight="bold" fill="white">₿</text>
  
  <!-- Support Line -->
  <line x1="80" y1="300" x2="720" y2="300" stroke="url(#support)" stroke-width="6" stroke-dasharray="10,5"/>
  <text x="400" y="290" text-anchor="middle" font-family="Arial, sans-serif" font-size="18" font-weight="bold" fill="url(#support)">$110K SUPPORT</text>
  
  <!-- HOLDS text -->
  <text x="400" y="120" text-anchor="middle" font-family="Arial, sans-serif" font-size="48" font-weight="bold" fill="white">BTC HOLDS</text>
  <text x="400" y="160" text-anchor="middle" font-family="Arial, sans-serif" font-size="24" fill="url(#support)">SUPPORT</text>
  
  <!-- Price Chart -->
  <polyline points="100,280 150,270 200,250 250,240 300,220 350,200 400,190 450,180 500,170 550,160 600,150 650,140 700,130" 
            fill="none" stroke="url(#green)" stroke-width="4"/>
  
  <!-- +40% Pump indicator -->
  <rect x="500" y="200" width="200" height="60" fill="url(#green)" opacity="0.8" rx="8"/>
  <text x="600" y="225" text-anchor="middle" font-family="Arial, sans-serif" font-size="24" font-weight="bold" fill="white">+40%</text>
  <text x="600" y="245" text-anchor="middle" font-family="Arial, sans-serif" font-size="16" fill="white">IN A WEEK</text>
  
  <!-- Majors All Up indicators -->
  <circle cx="680" cy="80" r="15" fill="url(#green)" opacity="0.8"/>
  <text x="680" y="85" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" font-weight="bold" fill="white">↗</text>
  
  <circle cx="720" cy="100" r="15" fill="url(#green)" opacity="0.8"/>
  <text x="720" y="105" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" font-weight="bold" fill="white">↗</text>
  
  <circle cx="650" cy="60" r="15" fill="url(#green)" opacity="0.8"/>
  <text x="650" y="65" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" font-weight="bold" fill="white">↗</text>
  
  <text x="680" y="40" text-anchor="middle" font-family="Arial, sans-serif" font-size="16" font-weight="bold" fill="url(#green)">MAJORS ALL UP</text>
  
  <!-- Bottom stats -->
  <text x="200" y="350" text-anchor="middle" font-family="Arial, sans-serif" font-size="14" fill="white">Whales: -$12.7B</text>
  <text x="400" y="350" text-anchor="middle" font-family="Arial, sans-serif" font-size="14" fill="white">Corps: +1755 BTC/day</text>
  <text x="600" y="350" text-anchor="middle" font-family="Arial, sans-serif" font-size="14" fill="white">Sentiment: Neutral</text>
  
  <!-- Hash & Hedge branding -->
  <text x="400" y="380" text-anchor="middle" font-family="Arial, sans-serif" font-size="16" fill="#888">Hash & Hedge</text>
</svg>