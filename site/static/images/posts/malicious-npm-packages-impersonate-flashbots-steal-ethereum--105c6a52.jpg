<svg xmlns="http://www.w3.org/2000/svg" width="800" height="400" viewBox="0 0 800 400">
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1a202c;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#2d3748;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="danger" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ff4757;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#ff3742;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="ethereum" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#627eea;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#4c6ef5;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="npm" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#cc3534;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#cb3837;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <rect width="800" height="400" fill="url(#bg)"/>
  
  <!-- NPM Logo -->
  <rect x="50" y="120" width="100" height="60" fill="url(#npm)" rx="8"/>
  <text x="100" y="155" text-anchor="middle" font-family="Arial, sans-serif" font-size="20" font-weight="bold" fill="white">npm</text>
  
  <!-- Danger Arrow -->
  <path d="M170 150 L250 150" stroke="url(#danger)" stroke-width="4" fill="none"/>
  <path d="M240 140 L250 150 L240 160" stroke="url(#danger)" stroke-width="4" fill="none"/>
  
  <!-- Ethereum Wallet -->
  <rect x="280" y="100" width="120" height="80" fill="url(#ethereum)" rx="10" opacity="0.9"/>
  <text x="340" y="130" text-anchor="middle" font-family="Arial, sans-serif" font-size="18" font-weight="bold" fill="white">ETH</text>
  <text x="340" y="150" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="white">WALLET</text>
  <text x="340" y="170" text-anchor="middle" font-family="Arial, sans-serif" font-size="10" fill="white">KEYS STOLEN</text>
  
  <!-- Flashbots Reference -->
  <text x="500" y="130" font-family="Arial, sans-serif" font-size="24" font-weight="bold" fill="white">Flashbots</text>
  <text x="500" y="150" font-family="Arial, sans-serif" font-size="16" fill="url(#danger)">Impersonation</text>
  
  <!-- Warning Box -->
  <rect x="100" y="220" width="600" height="60" fill="url(#danger)" opacity="0.8" rx="8"/>
  <text x="400" y="240" text-anchor="middle" font-family="Arial, sans-serif" font-size="18" font-weight="bold" fill="white">MALICIOUS NPM PACKAGES</text>
  <text x="400" y="260" text-anchor="middle" font-family="Arial, sans-serif" font-size="14" fill="white">Stealing Ethereum Private Keys</text>
  
  <!-- Package Icons -->
  <rect x="150" y="300" width="60" height="40" fill="#333" stroke="url(#danger)" stroke-width="2" rx="4"/>
  <rect x="230" y="300" width="60" height="40" fill="#333" stroke="url(#danger)" stroke-width="2" rx="4"/>
  <rect x="310" y="300" width="60" height="40" fill="#333" stroke="url(#danger)" stroke-width="2" rx="4"/>
  <rect x="390" y="300" width="60" height="40" fill="#333" stroke="url(#danger)" stroke-width="2" rx="4"/>
  
  <text x="180" y="325" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="white">PKG1</text>
  <text x="260" y="325" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="white">PKG2</text>
  <text x="340" y="325" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="white">PKG3</text>
  <text x="420" y="325" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="white">PKG4</text>
  
  <!-- Hash & Hedge branding -->
  <text x="400" y="380" text-anchor="middle" font-family="Arial, sans-serif" font-size="16" fill="#888">Hash & Hedge</text>
</svg>